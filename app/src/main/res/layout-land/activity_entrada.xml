<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroBootstrap"
    tools:context=".Activities.Almacen.TiposRegistro.Entrada">

    <TextView
        android:id="@+id/tituloEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tipo de registro: ENTRADA"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/albaranEntrada"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:hint="Albarán"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/observacionesEntrada"
        android:layout_width="313dp"
        android:layout_height="96dp"
        android:layout_alignStart="@+id/albaranEntrada"
        android:layout_below="@+id/albaranEntrada"
        android:ems="10"
        android:hint="Observaciones"
        android:inputType="textMultiLine"
        android:lines="6"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/entradaSiguiente"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp"
        android:background="@color/azulBootstrap"
        android:onClick="siguiente"
        android:text="Siguiente"
        android:textColor="@android:color/white" />

    <Switch
        android:id="@+id/etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/albaranEntrada"
        android:padding="20dp"
        android:text="Imprimir etiquetas"
        android:textColor="@android:color/white"
        android:textOff="NO"
        android:textOn="SÍ" />
</RelativeLayout>